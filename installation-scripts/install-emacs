sudo add-apt-repository -y ppa:kelleyk/emacs
sudo apt-get update
sudo apt-get install -y emacs25

git clone --recursive https://github.com/DanielVartanov/emacs-starter-kit.git ~/.emacs.d
echo "export EDITOR=\"emacsclient -a emacs\"" >> ~/.bashrc

