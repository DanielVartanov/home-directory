mkdir -p ~/src
cd ~/src
git clone git://git.suckless.org/st
cd st
mkdir -p patches
wget -P patches https://st.suckless.org/patches/clipboard/st-clipboard-20180309-c5ba9c0.diff
cp ~/.home-directory/installation-scripts/st-config.def.h.diff ./patches/
git apply patches/*

sudo apt install -y libxft-dev
sudo make clean install
